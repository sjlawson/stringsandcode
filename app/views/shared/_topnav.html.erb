<!--=== Top ===-->

<div class="top">
  <div class="container">
    <div class="logo">

      <div class='site-title' >
        <div class='site-title-text'>
          Strings and Code
        </div>
      </div>

    </div>
    <div>
      <ul class="header-nav">
        <div class="browse">
          <div class="container">
            <ul class="nav navbar-nav">
              <li>
                <%= link_to "Home", home_index_path() %>
              </li>
              <% @categories.each do |category| %>
              <li>
                <%= link_to category.title.capitalize, category_path(:id => category.id) %>
              </li>
              <% end %>

            </ul>
            <div class='floatright'>
            <% if user_signed_in? %>
            Logged in as <strong>
              <%= current_user.email %>
            </strong>.
            <%= link_to "Sign out", destroy_user_session_path, method: :delete, :class => "btn btn-default" %>
            <% else %>
            <%= link_to "Sign up", new_user_registration_path, :class => "btn btn-default" %>
            <%= link_to "Sign in", new_user_session_path, :class => "btn btn-default" %>
            <% end %>
            </div>
          </div>
        </div>
    </div>
  </div>
